---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
---

<nav
    id="main-nav"
    class="fixed w-full z-50 transition-all duration-500 border-b border-white/10 bg-[#0A192F] py-4 shadow-2xl"
>
    <div class="max-w-7xl mx-auto px-6">
        <div class="flex justify-between items-center h-16">
            <!-- Logo: Corporate & Serif -->
            <a href="/" class="flex items-center group">
                <Image
                    src={logoImage}
                    alt="M2 Real Estate"
                    width={200}
                    height={100}
                    format="webp"
                    quality="high"
                    class="h-[136px] w-auto object-contain transition-transform duration-500 group-hover:scale-105 group-hover:drop-shadow-[0_0_15px_rgba(212,175,55,0.4)] mix-blend-screen"
                />
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-10">
                <a
                    href="/propiedades"
                    class="text-[11px] uppercase tracking-[0.3em] text-white hover:text-brand-accent transition-all duration-300 relative group font-bold"
                >
                    Propiedades
                    <span
                        class="absolute -bottom-2 left-0 w-0 h-[1px] bg-brand-accent transition-all duration-300 group-hover:w-full"
                    ></span>
                </a>
                <a
                    href="/ubicaciones"
                    class="text-[11px] uppercase tracking-[0.3em] text-white hover:text-brand-accent transition-all duration-300 relative group font-bold"
                >
                    Ubicaciones
                    <span
                        class="absolute -bottom-2 left-0 w-0 h-[1px] bg-brand-accent transition-all duration-300 group-hover:w-full"
                    ></span>
                </a>

                <a
                    href="/nosotros"
                    class="text-[11px] uppercase tracking-[0.3em] text-white hover:text-brand-accent transition-all duration-300 relative group font-bold"
                >
                    Nosotros
                    <span
                        class="absolute -bottom-2 left-0 w-0 h-[1px] bg-brand-accent transition-all duration-300 group-hover:w-full"
                    ></span>
                </a>

                <!-- CTA: Action Oriented -->
                <a
                    href="/contacto"
                    class="flex items-center gap-2 px-5 py-2.5 bg-brand-accent text-[#0A192F] text-[11px] font-bold uppercase tracking-widest hover:bg-white transition-all duration-300 shadow-lg hover:shadow-brand-accent/20 group"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path>
                    </svg>
                    <span>Contactar</span>
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-toggle"
                class="md:hidden text-white p-2 text-xs uppercase tracking-widest font-bold flex items-center gap-2"
            >
                <span>Menú</span>
                <svg
                    id="menu-icon"
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        id="mobile-menu"
        class="hidden md:hidden bg-brand-primary border-t border-white/5 py-10 px-8 animate-fade-in"
    >
        <div class="flex flex-col gap-8">
            <a
                href="/propiedades"
                class="text-[11px] uppercase tracking-[0.3em] text-white border-b border-white/5 pb-4 font-bold"
                >Propiedades</a
            >
            <a
                href="/ubicaciones"
                class="text-[11px] uppercase tracking-[0.3em] text-white border-b border-white/5 pb-4 font-bold"
                >Ubicaciones</a
            >

            <a
                href="/nosotros"
                class="text-[11px] uppercase tracking-[0.3em] text-white border-b border-white/5 pb-4 font-bold"
                >Sobre Nosotros</a
            >
            <a
                href="/contacto"
                class="text-xs uppercase tracking-[0.4em] text-brand-accent font-black pt-2"
                >Contáctenos</a
            >
        </div>
    </div>
</nav>

<script>
    const nav = document.getElementById("main-nav");
    const toggle = document.getElementById("mobile-menu-toggle");
    const menu = document.getElementById("mobile-menu");

    // Scroll Logic
    window.addEventListener("scroll", () => {
        if (window.scrollY > 50) {
            nav?.classList.add("py-2");
            nav?.classList.remove("py-4");
        } else {
            nav?.classList.remove("py-2");
            nav?.classList.add("py-4");
        }
    });

    // Mobile Toggle
    toggle?.addEventListener("click", () => {
        menu?.classList.toggle("hidden");
    });
</script>

<style>
    .glass-panel {
        background: rgba(10, 15, 23, 0.9);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }
</style>
