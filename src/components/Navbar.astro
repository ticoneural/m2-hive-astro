<nav
    id="main-nav"
    class="fixed w-full z-50 transition-all duration-500 border-b border-white/5 bg-transparent py-6"
>
    <div class="max-w-7xl mx-auto px-6">
        <div class="flex justify-between items-center h-16">
            <!-- Logo: Corporate & Serif -->
            <a href="/" class="flex items-center group">
                <img
                    src="/assets/logo-white.png"
                    alt="M2 Real Estate"
                    class="h-12 w-auto object-contain transition-transform duration-500 group-hover:scale-110 group-hover:drop-shadow-[0_0_15px_rgba(212,175,55,0.4)]"
                />
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-10">
                <a href="/propiedades" class="text-[10px] uppercase tracking-[0.3em] text-white hover:text-brand-accent transition-all duration-300 relative group">
                    Collections
                    <span class="absolute -bottom-2 left-0 w-0 h-[1px] bg-brand-accent transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/zonas" class="text-[10px] uppercase tracking-[0.3em] text-white hover:text-brand-accent transition-all duration-300 relative group">
                    Zonas
                    <span class="absolute -bottom-2 left-0 w-0 h-[1px] bg-brand-accent transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/calculadora" class="text-[10px] uppercase tracking-[0.3em] text-white hover:text-brand-accent transition-all duration-300 relative group">
                    Calculator
                    <span class="absolute -bottom-2 left-0 w-0 h-[1px] bg-brand-accent transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/nosotros" class="text-[10px] uppercase tracking-[0.3em] text-white hover:text-brand-accent transition-all duration-300 relative group">
                    Nosotros
                    <span class="absolute -bottom-2 left-0 w-0 h-[1px] bg-brand-accent transition-all duration-300 group-hover:w-full"></span>
                </a>

                <!-- CTA: Private Banker Style -->
                <a
                    href="/contacto"
                    class="flex items-center gap-3 px-6 py-3 border border-brand-accent/40 text-brand-accent text-[10px] font-bold uppercase tracking-[0.2em] hover:bg-brand-accent hover:text-brand-primary transition-all duration-500 group shadow-lg shadow-brand-accent/5"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 group-hover:rotate-12 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <span>Briefing</span>
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-toggle" class="md:hidden text-white p-2">
                <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-brand-primary border-t border-white/5 py-8 px-6 animate-fade-in">
        <div class="flex flex-col gap-6">
            <a href="/propiedades" class="text-xs uppercase tracking-widest text-white border-b border-white/5 pb-2">Collections</a>
            <a href="/zonas" class="text-xs uppercase tracking-widest text-white border-b border-white/5 pb-2">Zonas</a>
            <a href="/calculadora" class="text-xs uppercase tracking-widest text-white border-b border-white/5 pb-2">Calculator</a>
            <a href="/nosotros" class="text-xs uppercase tracking-widest text-white border-b border-white/5 pb-2">Nosotros</a>
            <a href="/contacto" class="text-xs uppercase tracking-widest text-brand-accent font-bold pt-4">Agendar Briefing</a>
        </div>
    </div>
</nav>

<script>
    const nav = document.getElementById('main-nav');
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');

    // Scroll Logic
    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            nav?.classList.add('glass-panel', 'py-2');
            nav?.classList.remove('py-6', 'bg-transparent');
        } else {
            nav?.classList.remove('glass-panel', 'py-2');
            nav?.classList.add('py-6', 'bg-transparent');
        }
    });

    // Mobile Toggle
    toggle?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
    });
</script>

<style>
    .glass-panel {
        background: rgba(10, 15, 23, 0.9);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }
</style>
