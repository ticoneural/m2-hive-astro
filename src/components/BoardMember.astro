---
interface Props {
	name: string;
	role: string;
	image: string;
	credentials: string;
}

const { name, role, image, credentials } = Astro.props;
---

<div
	class="group relative overflow-hidden rounded-sm border border-brand-accent/20 bg-brand-surface/50 transition-all duration-400 hover:border-brand-accent/50 hover:shadow-glow"
>
	<!-- Image Container with Grayscale Effect -->
	<div class="aspect-[3/4] overflow-hidden bg-brand-primary relative">
		<img
			src={image}
			alt={name}
			class="h-full w-full object-cover transition-all duration-700 ease-out-expo grayscale filter group-hover:scale-105 group-hover:grayscale-0"
		/>
		<!-- Overlay Gradient -->
		<div
			class="absolute inset-0 bg-gradient-to-t from-brand-primary/90 via-transparent to-transparent opacity-60 transition-opacity duration-400 group-hover:opacity-40"
		></div>
	</div>

	<!-- Content -->
	<div class="absolute bottom-0 left-0 w-full p-6">
		<div
			class="mb-1 h-0.5 w-8 bg-brand-accent transition-all duration-400 group-hover:w-16"
		></div>
		<h3 class="font-serif text-2xl text-brand-head">{name}</h3>
		<p
			class="mb-2 font-sans text-sm font-bold uppercase tracking-wider text-brand-accent"
		>
			{role}
		</p>
		<p class="font-sans text-xs text-brand-text opacity-80">
			{credentials}
		</p>
	</div>
</div>
