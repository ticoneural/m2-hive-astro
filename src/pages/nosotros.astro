---
import Layout from "../layouts/Layout.astro";
import BoardMember from "../components/BoardMember.astro";
import CorporateTimeline from "../components/CorporateTimeline.astro";

const boardMembers = [
    {
        name: "Carlos Monge",
        role: "Socio Fundador",
        credentials: "MBA Finanzas, INCAE | 15 Años de Experiencia",
        image: "/assets/demo/agent_1.jpg",
    },
    {
        name: "Elena Varela",
        role: "Directora Jurídica",
        credentials: "Derecho Corporativo, especialista en Bienes Raíces",
        image: "/assets/demo/agent_2.jpg",
    },
    {
        name: "David Chen",
        role: "Análisis de Mercado",
        credentials: "Especialista en Valoración de Activos",
        image: "/assets/demo/agent_1.jpg",
    },
];

const milestones = [
    {
        year: "2018",
        title: "Fundación",
        description:
            "Inicio como consultoría legal boutique para adquisiciones inmobiliarias en Escazú.",
    },
    {
        year: "2021",
        title: "Expansión de Servicios",
        description:
            "Alianza con expertos financieros para ofrecer estructuración completa de portafolios de inversión.",
    },
    {
        year: "2024",
        title: "Modernización Digital",
        description:
            "Implementación del Sistema M2 para agilizar cierres y análisis de mercado en tiempo real.",
    },
    {
        year: "2026",
        title: "Liderazgo en el Mercado",
        description:
            "Consolidación como la firma inmobiliaria de referencia para clientes corporativos y privados en la GAM.",
    },
];
---

<Layout title="The Firm | M2 Real Estate Institutional">
    <div class="relative min-h-screen pt-24 pb-20 overflow-hidden">
        <!-- Background Elements -->
        <div class="fixed inset-0 z-0 bg-brand-primary"></div>
        <div
            class="fixed top-0 left-0 h-[500px] w-full bg-gradient-to-b from-brand-surface/30 to-transparent z-0"
        >
        </div>

        <div class="container relative z-10 mx-auto px-6">
            <!-- Header Section -->
            <div class="mb-20 max-w-4xl animate-fade-in-up">
                <h5
                    class="mb-4 font-sans text-sm font-bold uppercase tracking-[0.2em] text-brand-accent"
                >
                    Perfil de la Firma
                </h5>
                <h1
                    class="mb-8 font-serif text-5xl leading-tight text-white md:text-6xl"
                >
                    Más que asesores,<br />
                    somos sus <span class="text-brand-accent italic"
                        >Estrategas Inmobiliarios</span
                    >.
                </h1>
                <p
                    class="text-xl leading-relaxed text-gray-300 max-w-2xl border-l-2 border-brand-accent pl-6"
                >
                    M2 Real Estate opera con el más alto rigor legal, precisión
                    financiera y un conocimiento profundo del mercado. Nuestro
                    objetivo es asegurar el valor de su patrimonio a través de
                    decisiones estratégicas basadas en datos reales.
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
                <!-- Left Column: The Board -->
                <div class="lg:col-span-8 animate-fade-in-up delay-100">
                    <div class="mb-12 flex items-center justify-between">
                        <h2 class="font-serif text-3xl text-white">
                            Nuestro Equipo Directivo
                        </h2>
                        <div class="h-[1px] flex-1 bg-white/10 ml-8"></div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        {
                            boardMembers.map((member) => (
                                <BoardMember {...member} />
                            ))
                        }

                        <!-- Call to Action Tile -->
                        <div
                            class="flex flex-col justify-center items-center p-8 border border-brand-accent/20 rounded-sm bg-brand-surface/20 text-center hover:bg-brand-surface/40 hover:border-brand-accent/50 transition-all duration-300 cursor-pointer group animate-glow"
                        >
                            <h4
                                class="font-serif text-xl text-white mb-2 text-white"
                            >
                                Forme parte del equipo
                            </h4>
                            <p class="text-base text-gray-300 mb-6 font-light">
                                Buscamos profesionales excepcionales para unirse
                                a nuestra firma.
                            </p>
                            <span
                                class="text-brand-accent text-sm font-bold uppercase tracking-widest border-b border-brand-accent pb-1 group-hover:text-white group-hover:border-white transition-colors animate-pulse"
                                >Contacto Confidencial</span
                            >
                        </div>
                    </div>
                </div>

                <!-- Right Column: History & Thesis -->
                <div
                    class="lg:col-span-4 space-y-16 animate-fade-in-up delay-200"
                >
                    <!-- Timeline -->
                    <div>
                        <h3
                            class="font-serif text-2xl text-white mb-8 border-b border-white/10 pb-4"
                        >
                            Nuestra Trayectoria
                        </h3>
                        <CorporateTimeline milestones={milestones} />
                    </div>

                    <!-- Stats -->
                    <div
                        class="glass-panel p-8 rounded-sm bg-brand-surface/10 border border-brand-accent/10"
                    >
                        <h3 class="font-serif text-2xl text-white mb-6">
                            Cifras de Valor
                        </h3>
                        <div class="space-y-8">
                            <div class="group">
                                <span
                                    class="block text-4xl font-serif text-brand-accent group-hover:scale-110 transition-transform origin-left"
                                    >$42M+</span
                                >
                                <span
                                    class="text-gray-400 text-sm uppercase tracking-widest opacity-80"
                                    >Activos en Gestión</span
                                >
                            </div>
                            <div class="group">
                                <span
                                    class="block text-4xl font-serif text-brand-accent group-hover:scale-110 transition-transform origin-left"
                                    >140+</span
                                >
                                <span
                                    class="text-gray-400 text-sm uppercase tracking-widest opacity-80"
                                    >Cierres Exitosos</span
                                >
                            </div>
                            <div class="group">
                                <span
                                    class="block text-4xl font-serif text-brand-accent group-hover:scale-110 transition-transform origin-left"
                                    >100%</span
                                >
                                <span
                                    class="text-gray-400 text-sm uppercase tracking-widest opacity-80"
                                    >Transparencia Jurídica</span
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
