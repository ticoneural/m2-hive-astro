---
import Layout from '../layouts/Layout.astro';
import ListingCard from '../components/ListingCard.astro';
import type { Product } from '../types';

// Get query params for filtering
const url = new URL(Astro.request.url);
const selectedCategory = url.searchParams.get("category") || "";
const minPrice = url.searchParams.get("minPrice") || "";
const maxPrice = url.searchParams.get("maxPrice") || "";

let products: Product[] = [];
let categories: { name: string; count: number }[] = [];
let error = null;

try {
  // Fetch Products with filters
  let apiPath = 'https://api-m2.agenticantnest.com/api/v1/products';
  const params = new URLSearchParams();
  if (selectedCategory) params.append('category', selectedCategory);
  
  const response = await fetch(`${apiPath}?${params.toString()}`);
  if (!response.ok) throw new Error(`API Error: ${response.statusText}`);
  const data = await response.json();
  products = data.data || [];

  // Filter prices client-side or server-side (Hive API v0.7.2 might not support min/max yet)
  if (minPrice) products = products.filter(p => p.price >= parseFloat(minPrice));
  if (maxPrice) products = products.filter(p => p.price <= parseFloat(maxPrice));

  // Fetch Categories for Filter Sidebar
  const catRes = await fetch('https://api-m2.agenticantnest.com/api/v1/categories');
  categories = await catRes.json();
} catch (e) {
  console.error(e);
  error = "Servicio temporalmente no disponible.";
}

const title = "Cat치logo de Propiedades | M2 Real Estate";
---

<Layout title={title}>
    <div class="bg-white min-h-screen py-24 relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <!-- Header -->
            <div class="flex flex-col md:flex-row justify-between items-end mb-16 border-b border-gray-100 pb-8">
                <div>
                    <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-brand-accent mb-3 block">
                        Inventario Seleccionado
                    </span>
                    <h1 class="text-4xl font-serif text-brand-surface">
                        Propiedades <span class="text-gray-300 font-light">/ {selectedCategory || 'Global'}</span>
                    </h1>
                </div>
                <div class="text-right hidden md:block">
                    <span class="block text-3xl font-serif text-brand-surface tracking-tighter">{products.length}</span>
                    <span class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">Activos Disponibles</span>
                </div>
            </div>

            <div class="flex flex-col lg:flex-row gap-16">
                <!-- Sidebar Filters -->
                <aside class="w-full lg:w-80 shrink-0">
                    <div class="bg-gray-50/50 p-8 rounded-sm border border-gray-100 sticky top-32">
                        <h2 class="font-serif text-xl text-brand-surface mb-8 border-b border-gray-200 pb-4">
                            Sistemas de Filtrado
                        </h2>

                        <form method="GET" action="/propiedades" class="space-y-8">
                            <!-- Category Filter -->
                            <div>
                                <label class="block text-[10px] font-bold uppercase tracking-widest text-gray-400 mb-3">Zona o Estilo</label>
                                <select 
                                    name="category"
                                    class="w-full bg-white border border-gray-200 text-brand-surface text-sm p-3 rounded-none outline-none focus:border-brand-accent transition-all font-serif"
                                >
                                    <option value="">Todas las categor칤as</option>
                                    {categories.map(cat => (
                                        <option value={cat.name} selected={selectedCategory === cat.name}>{cat.name} ({cat.count})</option>
                                    ))}
                                </select>
                            </div>

                            <!-- Price Range -->
                            <div>
                                <label class="block text-[10px] font-bold uppercase tracking-widest text-gray-400 mb-3">Rango de Capital (USD)</label>
                                <div class="grid grid-cols-2 gap-3">
                                    <input 
                                        type="number" 
                                        name="minPrice" 
                                        placeholder="M칤nimo" 
                                        value={minPrice}
                                        class="w-full bg-white border border-gray-200 text-sm p-3 rounded-none outline-none focus:border-brand-accent font-mono" 
                                    />
                                    <input 
                                        type="number" 
                                        name="maxPrice" 
                                        placeholder="M치ximo" 
                                        value={maxPrice}
                                        class="w-full bg-white border border-gray-200 text-sm p-3 rounded-none outline-none focus:border-brand-accent font-mono" 
                                    />
                                </div>
                            </div>

                            <button 
                                type="submit"
                                class="w-full bg-brand-surface text-white py-4 px-6 text-[10px] font-bold uppercase tracking-widest hover:bg-brand-accent transition-all duration-500 shadow-lg shadow-brand-surface/20"
                            >
                                Aplicar Par치metros
                            </button>

                            <a 
                                href="/propiedades" 
                                class="block text-center text-[10px] text-gray-400 uppercase tracking-widest hover:text-brand-accent transition-all"
                            >
                                Resetear B칰squeda
                            </a>
                        </form>
                    </div>
                </aside>

                <!-- Grid Results -->
                <div class="flex-1">
                    {error ? (
                        <div class="text-center py-20 bg-red-50 text-red-600 rounded-sm border border-red-100">
                             <p class="font-serif italic">{error}</p>
                        </div>
                    ) : products.length > 0 ? (
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                            {products.map((product) => (
                                <ListingCard listing={product} />
                            ))}
                        </div>
                    ) : (
                        <div class="flex flex-col items-center justify-center py-32 rounded-sm border border-dashed border-gray-200 bg-gray-50/30 text-center px-6">
                            <div class="w-20 h-20 mb-6 bg-white rounded-full flex items-center justify-center text-gray-200 shadow-sm">
                                游댌
                            </div>
                            <h3 class="text-2xl font-serif text-brand-surface mb-3">Sin Coincidencias</h3>
                            <p class="text-gray-400 text-sm max-w-xs mx-auto leading-loose">
                                No se encontraron activos bajo los par치metros actuales. Ajuste los filtros para ver m치s opciones.
                            </p>
                        </div>
                    )}
                </div>
            </div>
        </div>
    </div>
</Layout>
